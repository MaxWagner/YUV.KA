<UserControl x:Class="YuvKA.Implementation.ChartView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="http://research.microsoft.com/DynamicDataDisplay/1.0"
    xmlns:chart="clr-namespace:YuvKA.Implementation"
    Height="Auto" Width="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Uid="AddLines" Content="Add lines" Command="{Binding Path=AddLinesCommand}"></Button>
            <Button Uid="EditLine" Content="Edit line" Command="{Binding Path=EditLineCommand}"></Button>
        </StackPanel>
        <chart:ChartPlotter x:Name="plotter" Grid.Row="1" LegendVisibility="Collapsed"
                            Height="Auto" Width="Auto"
         LineGraphs="{Binding Path=LineGraphs}" >
        </chart:ChartPlotter>
    </Grid>
</UserControl>
