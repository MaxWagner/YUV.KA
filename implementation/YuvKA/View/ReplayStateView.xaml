					<Canvas x:Name="ButtonContent"/>
				</Button>
				<Canvas x:Name="PlayTriangle" Height="23.059" Width="13.666" Margin="12,5.75,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" d:LayoutOverrides="VerticalAlignment">
					<Canvas.Visibility>
						<Binding Path="IsPlaying">
							<Binding.Converter>
								<kent:MapConverter>
									<kent:Mapping To="{x:Static Member=Visibility.Hidden}">
										<kent:Mapping.From>
											<sys:Boolean>True</sys:Boolean>
										</kent:Mapping.From>
									</kent:Mapping>
									<kent:Mapping To="{x:Static Member=Visibility.Visible}">
										<kent:Mapping.From>
											<sys:Boolean>False</sys:Boolean>
										</kent:Mapping.From>
									</kent:Mapping>
								</kent:MapConverter>
							</Binding.Converter>
						</Binding>
					</Canvas.Visibility>
