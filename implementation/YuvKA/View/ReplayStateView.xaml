						<TransformGroup>
							<ScaleTransform ScaleY="0.65" ScaleX="0.6"/>
							<SkewTransform AngleY="0" AngleX="0"/>
							<RotateTransform Angle="0"/>
							<TranslateTransform/>
						</TransformGroup>
					</Canvas.RenderTransform>
					<Path Data="M9.9166667,6.0833333 L9.9166667,27.016594" Height="24.469" Stretch="Fill" Stroke="Black" Width="3.198" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Canvas.Top="-0.647" StrokeThickness="2" Canvas.Left="-0.903"/>
