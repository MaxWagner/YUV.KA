					<Path Data="M10.917,27 L22.25,16" Height="12.375" Stretch="Fill" Stroke="Black" Canvas.Top="10.684" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" RenderTransformOrigin="0.493,0.624" Canvas.Left="13.666" StrokeThickness="2"/>
					<Path Data="M22.583333,16.75 L9.917,6.083" Height="11.667" Stretch="Fill" Stroke="Black" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Canvas.Left="13.666" StrokeThickness="2"/>
				</Canvas>
			</Grid>
		</Border>
		<Border x:Name="FasterButton" HorizontalAlignment="Left" Width="29.667" Margin="105.001,12.333,0,11">
			<Grid HorizontalAlignment="Left" Width="29" Height="29" VerticalAlignment="Top">
				<Button x:Name="Faster" HorizontalAlignment="Left" Style="{DynamicResource ButtonStyle1}" Width="28" MaxWidth="35" MaxHeight="35" VerticalAlignment="Top" Height="28">
					<Canvas x:Name="ButtonContent2"/>
				</Button>
				<Canvas x:Name="FasterTriangle" Height="23.059" Width="13.666" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Margin="5.167,2.5,0,0">
