					<Path Data="M22.583333,16.75 L9.917,6.083" Height="11.667" Stretch="Fill" Stroke="Black" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" StrokeThickness="2"/>
					<Path Data="M9.9166667,6.0833333 L9.9166667,27.016594" Height="24.469" Stretch="Fill" Stroke="Black" Width="2.29" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Canvas.Top="-0.647" Canvas.Left="13.278" StrokeThickness="2"/>
					<Path Data="M10.917,27 L22.25,16" Height="12.375" Stretch="Fill" Stroke="Black" Canvas.Top="10.684" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" RenderTransformOrigin="0.493,0.624" Canvas.Left="13.666" StrokeThickness="2"/>
					<Path Data="M22.583333,16.75 L9.917,6.083" Height="11.667" Stretch="Fill" Stroke="Black" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Canvas.Left="13.666" StrokeThickness="2"/>
				</Canvas>
			</Grid>
		</Border>
		<Border x:Name="StopButton" HorizontalAlignment="Left" Width="29.667" Margin="75.334,12.333,0,11">
			<Grid HorizontalAlignment="Left" Width="29" Height="29" VerticalAlignment="Top">
				<Button x:Name="Stop" HorizontalAlignment="Left" Style="{DynamicResource ButtonStyle1}" Width="28" MaxWidth="35" MaxHeight="35" VerticalAlignment="Top" Height="28">
					<Canvas x:Name="ButtonContent3"/>
				</Button>
				<Canvas x:Name="StopSquare" Height="15.1" Width="17" Margin="5.666,6.375,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
					<Canvas.RenderTransform>
						<TransformGroup>
							<ScaleTransform ScaleY="0.8" ScaleX="0.7"/>
							<SkewTransform AngleY="0" AngleX="0"/>
