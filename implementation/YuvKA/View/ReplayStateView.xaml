					<Path Data="M22.583333,16.75 L9.917,6.083" Height="11.667" Stretch="Fill" Stroke="Black" Width="13.666" StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" StrokeThickness="1.3"/>
				</Canvas>
				<Canvas x:Name="PauseBars" HorizontalAlignment="Left" Margin="10.291,7.625,0,0" Height="19.25" VerticalAlignment="Top" Width="15.5">
					<Canvas.Visibility>
						<Binding Path="IsPlaying">
							<Binding.Converter>
								<kent:MapConverter>
									<kent:Mapping To="{x:Static Member=Visibility.Hidden}">
										<kent:Mapping.From>
											<sys:Boolean>False</sys:Boolean>
										</kent:Mapping.From>
									</kent:Mapping>
									<kent:Mapping To="{x:Static Member=Visibility.Visible}">
										<kent:Mapping.From>
											<sys:Boolean>True</sys:Boolean>
										</kent:Mapping.From>
									</kent:Mapping>
								</kent:MapConverter>
							</Binding.Converter>
						</Binding>
					</Canvas.Visibility>
					<Rectangle StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Stroke="Black" Width="5.75" Height="19.25" StrokeThickness="1.3"/>
					<Rectangle StrokeStartLineCap="Triangle" StrokeEndLineCap="Triangle" Stroke="Black" Width="5.75" Height="19.25" Canvas.Left="9.75" StrokeThickness="1.3"/>
				</Canvas>
			</Grid>
		</Border>
		<Slider x:Name="TickSlider" Margin="139,19,8,6" Value="{Binding Parent.Model.CurrentTick}" Minimum="0" Maximum="100" TickPlacement="BottomRight" TickFrequency="2"/>
		<TextBlock x:Name="TickLabel" Text="{Binding Parent.Model.CurrentTick}" Margin="139,4,137,0" Height="14" VerticalAlignment="Top" FontWeight="Bold"/>
		<Border x:Name="SlowerButton" HorizontalAlignment="Left" Width="29.667" Margin="8.125,12.333,0,11">
			<Grid HorizontalAlignment="Left" Width="29" Height="29" VerticalAlignment="Top">
				<Button x:Name="Slower" HorizontalAlignment="Left" Style="{DynamicResource ButtonStyle1}" Width="28" MaxWidth="35" MaxHeight="35" VerticalAlignment="Top" Height="28">
					<Canvas x:Name="ButtonContent1"/>
				</Button>
				<Canvas x:Name="SlowerTriangle" Height="23.059" Width="13.666" Margin="9.333,2.167,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
